<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <link rel="shortcut icon" type="image/jpg" href="/img/favicon.ico"/> 
    <link rel="canonical" href="{{ metadata.url }}{{ page.url | url }}" />

    <meta name="description" content="{{ description or metadata.description }}">
    <meta name="author" content="{{ metadata.author.name }}">
    <meta property="og:site_name" content="{{ metadata.title }}" />
    {% if featured_image %}
    <meta property="og:title" content="{{ title or metadata.title }}">
    <meta property="og:description" content="{{ description or metadata.description }}">
    <meta property="og:type" content="article">
    <meta property="og:url" content="{{ metadata.url }}{{ page.url | url }}">
    <meta property="og:image" content="{{ metadata.url or '' }}{{ featured_image_thumbnail}}.jpg">
    <meta property="article:author" content="{{ metadata.author.name }}" />
    <meta property="article:published_time" content="{{ date.toISOString() }}" />
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="{{ title or metadata.title }}">
    <meta name="twitter:description" content="{{ description or metadata.description }}">
    <meta name="twitter:image" content="{{ metadata.url or '' }}{{ featured_image_thumbnail }}.jpg"> 
    {% endif %}
   
    {% set css %}
      {% include "css/prism-base16-monokai.dark.css" %}
      {% include "css/index.css" %}
      {% include "css/post.css" %}
      {% include "css/grid.css" %}
      {% include "css/fontawesome.css" %}
      {%if custom_css %}
      {% include custom_css %}
      {% endif %}
    {% endset %}

    <style>
      {{ css | cssmin | safe }}
    </style>

    <script data-goatcounter="https://blog-thath-net.goatcounter.com/count"
      async src="//gc.zgo.at/count.js"></script>

    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body>
    <input type="checkbox" id="menu-toggle" class="menu-toggle" aria-hidden="true">

    <header>
      <div class="header-logo">
        <a href="{{ '/' | url }}" alt="main site">
          <div class="header-logo-container">
            <div class="site-logo">
            </div>
            <div class="site-logo-text">
              <div style="color: #444">
                <span style="font-size: 1.3em">T</span>ravis
              </div>
              <div style="color: #999">
                <span style="font-size: 1.3em">H</span>athaway
              </div>
            </div>
          </div>
        </a>
      </div>

      {#- Hamburger button (mobile only) #}
      <label for="menu-toggle" class="hamburger-button" aria-label="Toggle navigation menu">
        <span class="hamburger-icon"></span>
      </label>

      {#- Navigation with mobile overlay #}
      <nav class="nav-container">
        {#- Close button (mobile only) #}
        <label for="menu-toggle" class="nav-close" aria-label="Close navigation menu">
        </label>

        {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
        <ul class="nav">
        {%- for entry in collections.all | eleventyNavigation %}
          <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>
        {%- endfor %}
        </ul>
      </nav>
    </header>

    <aside>
      <h3>Tags</h3>
      <div class="tag-list">
      {% for tag in collections.tagList | filterTagList %}
        {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
        <div class="tag-list-item">
          <a href="{{ tagUrl | url }}">{{ tag }}</a> <span class="tag-count">({{collections[tag].length}})</span>
        </div>
      {% endfor %}
      </div>
    </aside>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <div class="side-panel-image"></div>

    <footer>Â© 2022 Travis Hathaway</footer>

    {% set js %}
    {% if custom_js %}
      {% include custom_js %}
    {% endif %}
    {% endset %}

    <script type="module">
      {{ js | jsmin | safe }}
    </script>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
